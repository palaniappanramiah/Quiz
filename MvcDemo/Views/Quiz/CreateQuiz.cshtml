@model MvcDemo.Models.QuizModel

@{
    ViewBag.Title = "Create Quiz";
}

@if (Request.IsAuthenticated)
{
    if (Context.User.Identity.Name == "admin")
    {
    <h2>Create the quiz questions</h2>
        
    using (Html.BeginForm())
    {

    <fieldset>
        <legend>MovieDB</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.QuestionId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Question)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Question)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Choice1)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Choice1)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Choice2)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Choice2)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Choice3)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Choice3)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Choice4)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Choice4)
        </div>

         <div class="editor-label">
            @Html.LabelFor(model => model.CorrectAnswer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CorrectAnswer)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    
    }
    else
    {
    <h2>Only admin can log in here</h2>
    <text>@Html.ActionLink("Log Off", "LogOff", "Account") and Log on again</text>
    }

}

else
{
    <h2>To Continue</h2>
    @Html.ActionLink("Log on", "LogOn", "Account")
}
